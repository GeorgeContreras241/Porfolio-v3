---
import miniProjects from "../const/miniProjects";
---

<div
  class="flex flex-row gap-2 flex-wrap items-center px-4 py-6 min-w-[300px] max-w-[1200px] w-[95%] m-auto"
>
  <h4
    class="inline-block w-full text-white mb-2 font-bold text-[1.5rem] lg:text-[2rem] md:text-[1.2rem] xl:text-[1.8rem]"
  >
    Mini proyectos
  </h4>
  {
    miniProjects.map((pro, index) => (
      <details class="text-white bg-neutral-800 pr-6 pl-6 lg:py-3 md:py-2 py-1  hover:bg-neutral-700/80 hover:cursor-pointer">
        <summary class="text-white ">
          <h4 class="inline-block font-semibold ">{pro.title}</h4>
        </summary>
        <p class="text-gray-300 text-sm xl:text-[1rem] md:text-[0.8rem] lg:mt-6 mt-3 mb-4 w-full">
          {pro.description}
        </p>
        <ul class="flex w-fit flex-row lg:gap-4 gap-1 flex-wrap items-center text-white font-semibold lg:text-[1rem] text-[.8rem]">
          {pro.technologies.map((tech, index) => (
            <li class="bg-blue-700 lg:px-6  md:px-3 px-2 py-1 rounded-2xl">
              {tech}
            </li>
          ))}
        </ul>
        <div class="flex flex-row gap-2 flex-wrap items-center justify-end lg:py-6 py-2 text-[.9rem]">
          <button class="bg-neutral-700 px-6 py-1 rounded-[8px]">
            Visitar
          </button>
          <button class="bg-neutral-700 px-6 py-1 rounded-[8px]">
            Git Hub
          </button>
        </div>
      </details>
    ))
  }
</div>
